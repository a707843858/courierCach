{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "sourceMap": false,
    "importHelpers": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true, 
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": false,
    "noUnusedLocals": true,             
    "noUnusedParameters": true, 
  },
  "include": [
    "src/packages/**/*.ts",
    "src/packages/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "*.test.ts"
  ]
}
